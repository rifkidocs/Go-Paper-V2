<!-- res/drawable/stroke_example.xml -->

<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Warna latar belakang -->
    <solid android:color="#ffffff" />

    <!-- Warna dan ketebalan garis tepi -->
    <stroke
        android:width="2dp"
        android:color="#c4c4c4" />

    <!-- Radius sudut (opsional) -->
    <corners android:radius="8dp" />

    <!-- Padding (opsional) -->
    <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp" />

</shape>
